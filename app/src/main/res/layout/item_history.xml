<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/history_item_background"
    android:padding="16dp"
    android:elevation="2dp">

    <!-- Heart Icon -->
    <TextView
        android:id="@+id/heartIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❤️"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- BPM Value -->
    <TextView
        android:id="@+id/itemBpmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="72"
        android:textSize="36sp"
        android:textColor="#FF5555"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/heartIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bpmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BPM"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/itemBpmText"
        app:layout_constraintBottom_toBottomOf="@id/itemBpmText"
        app:layout_constraintTop_toTopOf="@id/itemBpmText" />

    <!-- Confidence Badge -->
    <TextView
        android:id="@+id/itemConfidenceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High confidence"
        android:textSize="11sp"
        android:textColor="#00FF88"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/heartIcon"
        app:layout_constraintTop_toBottomOf="@id/itemBpmText" />

    <!-- Date -->
    <TextView
        android:id="@+id/itemDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nov 28, 2024"
        android:textSize="14sp"
        android:textColor="#AAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Time -->
    <TextView
        android:id="@+id/itemTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 AM"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemDateText" />

    <!-- Long press hint -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long press to delete"
        android:textSize="10sp"
        android:textColor="#444444"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
