<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Title with gradient effect -->
    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEART RATE"
            android:textSize="24sp"
            android:textColor="#FF5555"
            android:textStyle="bold"
            android:letterSpacing="0.08"
            android:shadowColor="#FF0000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONITOR"
            android:textSize="18sp"
            android:textColor="#AAAAAA"
            android:textStyle="normal"
            android:letterSpacing="0.15"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-light" />

        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/title_underline" />
    </LinearLayout>

    <!-- Speaker/Mute Button -->
    <FrameLayout
        android:id="@+id/muteButtonContainer"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/icon_button_background"
        android:elevation="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleContainer"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/muteButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ðŸ”Š"
            android:textSize="22sp"
            android:gravity="center" />
    </FrameLayout>

    <!-- History Button -->
    <FrameLayout
        android:id="@+id/historyButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/icon_button_background"
        android:elevation="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleContainer"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ðŸ“Š"
            android:textSize="22sp"
            android:gravity="center" />
    </FrameLayout>

    <!-- Heart Circle Container with Camera Inside -->
    <FrameLayout
        android:id="@+id/heartCircleContainer"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/muteButtonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <!-- Camera Preview (circular, behind heart border) -->
        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/circular_clip"
            android:clipToOutline="true" />

        <!-- Heart Circle Border/Glow (on top of camera) -->
        <View
            android:id="@+id/heartCircle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/heart_glow_border"
            android:elevation="8dp" />

        <!-- Lottie Heart Animation (replaces emoji during measurement) -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/heartLottie"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:visibility="gone"
            app:lottie_rawRes="@raw/heartbeat"
            app:lottie_autoPlay="false"
            app:lottie_loop="true" />

        <!-- Heart Emoji (on top, semi-transparent - shown when not measuring) -->
        <TextView
            android:id="@+id/heartIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¤ï¸"
            android:textSize="70sp"
            android:alpha="0.85"
            android:elevation="10dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- ECG Waveform View -->
    <com.example.heartratemonitor.ECGWaveformView
        android:id="@+id/ecgWaveformView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ecg_background"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/heartCircleContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading Animation (shown during calibration) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimation"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/loading_pulse"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toBottomOf="@id/heartCircleContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BPM Display -->
    <TextView
        android:id="@+id/heartRateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:textSize="72sp"
        android:textColor="#FF5555"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="-0.02"
        android:shadowColor="#FF0000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ecgWaveformView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BPM Label -->
    <TextView
        android:id="@+id/bpmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEATS PER MINUTE"
        android:textSize="14sp"
        android:textColor="#888888"
        android:letterSpacing="0.15"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/heartRateText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp" />

    <!-- Pulse Detected Indicator - Compact Version -->
    <LinearLayout
        android:id="@+id/pulseIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@drawable/pulse_indicator_background"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:elevation="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bpmLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/pulseDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pulse_dot_glow" />

        <TextView
            android:id="@+id/pulseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PULSE DETECTED"
            android:textSize="11sp"
            android:textColor="#00FF88"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:gravity="center" />
    </LinearLayout>

    <!-- Status Text Container with Background -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Keep finger OFF camera - calibrating..."
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="4dp"
        android:background="@drawable/status_background"
        android:padding="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
